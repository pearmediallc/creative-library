{
  "name": "creative-library-backend",
  "version": "1.0.0",
  "description": "Creative Asset Library Backend - Node.js + Express",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "lint": "eslint src/",
    "migrate": "node src/utils/migrate.js",
    "migrate:run": "cd scripts && ./run-migration.sh -f ../migrations/COMPLETE_MIGRATION_SCRIPT.sql",
    "migrate:direct": "cd scripts && ./run-migration-direct.sh ../migrations/COMPLETE_MIGRATION_SCRIPT.sql",
    "migrate:run-all": "cd scripts && ./run-migration.sh --all",
    "migrate:create": "cd scripts && ./create-migration.sh",
    "migrate:production": "node scripts/run-production-migration.js",
    "migrate:hotfix": "node scripts/run-rbac-hotfix.js",
    "db:check": "cd scripts && ./check-db.sh",
    "init-analytics": "node src/scripts/initAnalyticsTables.js",
    "reset-analytics": "node src/scripts/resetAnalyticsTables.js",
    "link-users-editors": "node src/scripts/linkUsersToEditors.js",
    "add-approval-workflow": "node src/scripts/addApprovalWorkflow.js",
    "migrate:comments": "node scripts/run-comments-migration.js",
    "migrate:phase5": "node scripts/run-comments-migration.js",
    "migrate:rbac-enhancements": "node scripts/run-rbac-enhancements.js",
    "migrate:teams": "node scripts/run-teams-migration.js",
    "migrate:phase8": "node scripts/run-teams-migration.js",
    "migrate:launch-requests": "node scripts/run-launch-requests-migration.js"
  },
  "keywords": [
    "creative",
    "asset",
    "library",
    "facebook",
    "analytics"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.454.0",
    "@aws-sdk/s3-request-presigner": "^3.454.0",
    "@slack/web-api": "^7.13.0",
    "archiver": "^7.0.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "exif-parser": "^0.1.12",
    "exiftool-vendored": "^35.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "image-size": "^1.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "piexifjs": "^1.0.6",
    "sharp": "^0.33.0",
    "uuid": "^13.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
