# ============================================
# CREATIVE ASSET LIBRARY - ENVIRONMENT VARIABLES
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database (Render PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/creative_library
DATABASE_POOL_SIZE=20

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=7d

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=creative-library-media
AWS_CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# File Upload Limits
MAX_FILE_SIZE_MB=500
MAX_UPLOAD_PER_USER_MONTHLY=100

# Facebook App Credentials (for direct Graph API integration)
# Get these from: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=735375959485927
FACEBOOK_APP_SECRET=your-facebook-app-secret
# Note: Python service is no longer required - using direct Graph API integration

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cron Jobs
ENABLE_CRON_JOBS=true
AD_NAME_CHECK_CRON=0 */6 * * *

# ============================================
# REDTRACK INTEGRATION (Unified Analytics)
# ============================================
# RedTrack API Configuration
# Get your API key from: RedTrack Dashboard -> Settings -> API
# Documentation: https://api.redtrack.io/docs
REDTRACK_API_URL=https://api.redtrack.io
REDTRACK_API_KEY=your-redtrack-api-key-here

# RedTrack tracking domain (used in campaign URLs)
# Example: https://track.demuretrend.com/690f9ef50ae431eeb6d5f03e?sub1={{ad.id}}
REDTRACK_TRACKING_DOMAIN=track.demuretrend.com
